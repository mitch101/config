# Add personal scripts to path
export PATH=~/bin:$PATH

# Add current directory to path
export PATH=.:$PATH

# Paths setup for ruby / rails
export PATH="/usr/local/bin:/usr/local/sbin:$PATH"

# Load any bin dir off the working dir.
# This was specifically added to use "bundle exec" bin files when in a rails repo.
export PATH=./bin:$PATH

# Define bash colours
source ~/config/shared/dotfiles/bash_colours.bash

# Setup Git completion
source ~/config/shared/dotfiles/git-completion.bash

export CLICOLOR=1
export EDITOR="mate -w"

# Configure prompt
export GIT_PS1_SHOWDIRTYSTATE=true
export PS1="\[$IGreen\]\n\h:\w \[$Yellow\](\$(~/.rvm/bin/rvm-prompt v p g s)) \[$Yellow\]\$(__git_ps1 [%s]) \[$BIGreen\]\nâ†’ \[$Color_Off\] "

# Load RVM
[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"

# Aliases
alias rm='rm -i'
alias g='git'

# Load custom bashrc
source ~/config/local/bashrc


