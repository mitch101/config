[user]
	name = Mitch Crowe
	email = mitch.crowe@suite101.com
[core]
	editor = mate -w
[color]
	diff = auto
	status = auto
	branch = auto
	ui = true
[alias]
    c = commit -m 
    aa = !git add -u && git add . && git status
    co = checkout
    cob = checkout -b
    st = status
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    up = !git fetch && git rebase origin/master
	up2 = !git fetch && git rebase origin/dev2
    cln = !git fetch && git rebase -i origin/master
    cln2 = !git fetch && git rebase -i origin/dev2
    ps = push
    pl = pull
    hp = push heroku master
    wip = !"git add -A; git ls-files --deleted -z | xargs -0 git rm; git commit -m \"wip\""


[push]
	default = current